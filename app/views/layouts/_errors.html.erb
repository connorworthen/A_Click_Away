<% if object.errors.any? %>
<div id="error-explanation">
  <div id="error_block">
    <p><%= pluralize(object.errors.count, 'error') %><br>
      <b>Your request could not be completed:</b></p><br>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>