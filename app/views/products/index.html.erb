<h1>Products Index</h1>

<% @products.each do |product| %>

<li>Name: <%= @product.name %></li><br><br>

<li>Price: <%= @product.price %></li><br><br>

<li>Stock: <%= @product.stock %></li><br><br>

<li>Description: <%= @product.description %></li><br><br>

<li>Manufacturer: <%= @product.manufacturer_id %></li><br>

<% end %>

<h1>Product Review</h1>

<% @reviews.each do |review| %>

<li>Rating: <%= @review.rating %>/5.0</li><br><br>

<li>Comment: <%= @review.comment %></li><br>

<%= link_to 'delete', reviews_path, :method => :delete, data: {:confirm => "Are you sure?" } , :title => "Delete #{@review}" %><br><br>

<%= "Review left by #{current_user.email}" %><br><br>

<% end %>

<%= link_to "Show all Products", products_path(@product) %>

<tr>
  <td><%= link_to p.name, user_products_path(p) %></td>
  <td><%= link_to 'Edit', edit_products_path %></td>
  <td><%= link_to 'Remove', products_path(@product), :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>

<br />

<td><%= link_to "Create a new product", new_product_path %></td>